@model AlterarSenhaModel
@{
}

<h1 class="text-center">Alterar senha</h1>

@if (TempData["MensagemErro"] != null)
{
    <div class="alerta alerta-erro" role="alert">
        <button class="close-alert">X</button>
        <div>
            @TempData["MensagemErro"]
        </div>
    </div>
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alerta alerta-sucesso" role="alert">
        <button class="close-alert">X</button>
        <div>
            @TempData["MensagemSucesso"]
        </div>
    </div>
}

<form asp-controller="AlterarSenha" asp-action="AlterarSenha" method="post" class="fs-5">
    <div class="mb-3">
        <label for="senha" class="form-label">Senha atual:</label>
        <input type="password" class="form-control fs-5" asp-for="SenhaAtual" required>
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Nova senha:</label>
        <input type="password" class="form-control fs-5" asp-for="NovaSenha" required>
    </div>
    <div class="mb-3">
        <label for="senha" class="form-label">Confirmar nova senha:</label>
        <input type="password" class="form-control fs-5" asp-for="ConfirmacaoNovaSenha" required>
    </div>
    <button type="submit" class="btn btn-primary btn-block fs-5">Salvar</button>
    <a class="btn btn-secondary fs-5" asp-controller="Home" asp-action="Index">Voltar</a>
</form>